
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
          integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/styles.css">
    <title>ManageForm</title>
</head>
<body>
<div class="container">
    <a href="/Admin/AdminForm" class="btn btn-outline-danger">Đăng Xuất</a>
    <h3 style="text-align: center">Chào Admin :
        <p style="font-weight: bold"> @Session["Name"]</p></h3>
    <h3 style="font-weight: bold">Quản lý thông số cấu hình :</h3>
    <div class="row">
        <div class="col-md-6">
            <a href="/Admin/CpuForm" class="btn btn-outline-dark col-md-12" type="submit"><h1>Bộ Xử lý CPU</h1></a>
            <br/><br/>
            <a href="/Admin/ColorForm" class="btn btn-outline-dark col-md-12" type="submit">
                <h1>Màu Sắc</h1></a>
            <br/><br/>
            <a href="/Admin/DisplayForm" class="btn btn-outline-dark col-md-12" type="submit">
                <h1>Kích cỡ màn hình</h1></a>
            <br/><br/>
            <a href="/Admin/DisplayCardForm" class="btn btn-outline-dark col-md-12" type="submit">
                <h1>Card Màn hình</h1></a>
            <br/><br/>
        </div>
        <div class="col-md-6">
            <a href="/Admin/HardDriveForm" class="btn btn-outline-dark col-md-12" type="submit">
                <h1>Ổ cứng </h1></a>
            <br/><br/>
            <a href="/Admin/YearForm" class="btn btn-outline-dark col-md-12" type="submit">
                <h1>Năm giới thiệu</h1></a>
            <br/><br/>
            <a href="/Admin/GroupForm" class="btn btn-outline-dark col-md-12" type="submit">
                <h1>Loại sản phẩm</h1></a>
            <br/><br/>
            <a href="/Admin/RamForm" class="btn btn-outline-dark col-md-12" type="submit">
                <h1>Ram</h1></a>
            <br/><br/>
        </div>
    </div>
    <h3 style="font-weight: bold">Quản lý Các loại sản phẩm:</h3>
    <div class="row">
        <div class="col-md-2"></div>
        <br /><br />
        <a href="/Admin/ProductForm" class="btn btn-outline-dark col-md-4" type="submit">
            <h1>Macbook</h1>
        </a>
        <a href="/Admin/PhukienForm" class="btn btn-outline-dark col-md-4" type="submit">
            <h1>Phụ kiện</h1>
        </a>
        <br /><br />
        <div class="col-md-2"></div>
    </div>
    <h3 style="font-weight: bold">Quản lý Khách hàng và hóa đơn:</h3>

    <a href="/Admin/AdminCustomerForm" class="btn btn-outline-dark " type="submit">
        <h1>Khách hàng</h1></a>

    <a href="/Admin/OrderForm" class="btn btn-outline-dark " type="submit">
        <h1>Hóa đơn đặt hàng</h1></a>

    <a href="/Admin/OrderDetailsForm" class="btn btn-outline-dark " type="submit">
        <h1>Chi tiết hóa đơn đặt hàng</h1></a>

</div>
</body>
</html>

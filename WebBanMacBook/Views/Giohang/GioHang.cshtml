@using WebBanMacBook.Models
@model List<Giohang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/LayoutPartial.cshtml";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
          integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/styles.css">
    <title>Home</title>
</head>
<h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>

<table align="center" style="">
    <tr style="text-align:center; font-weight: bold">
        <td style="width: 25%;vertical-align: center">Sản phẩm</td>
        <td style="width: 20%;vertical-align: center"></td>
        <td style="width: 5%;vertical-align: center"></td>
        <td style="width: 10%;vertical-align: center">Đơn giá</td>
        <td style="width: 10%;vertical-align: center">Thành tiền</td>
        <td style="width: 5%;vertical-align: center">MAC</td>
        <td style="width: 5%;vertical-align: center">PK</td>
        <td style="width: 5%;vertical-align: center"></td>
        <td style="width: 10%;vertical-align: center"></td>

    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align: center; font-weight: bold">

            <td style="vertical-align: center"><img src="@item.sAnhbia" alt="" class="img-fluid" style="width: 100%" /></td>
            <td style="text-align: center">@item.sTenProduct</td>

            @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { @iMasp = item.iMaProduct }))
            {
                <td style="vertical-align: center;text-align:center">
                    <input type="number" value="@item.iSoluong" min="1" max="10" name="txtSoluong" />
                </td>
                <td style="vertical-align: center">@String.Format("{0:0,0}", item.dDongia)</td>
                <td style="vertical-align: center">@String.Format("{0:0,0}", item.dThanhtien)</td>
                <td style="vertical-align: center">
                    <a href="@Url.Action("DetailsForm", "ListProduct", new {@productid = item.iMaProduct})">
                        <i class="fas fa-info-circle"></i>
                    </a>
                </td>
                <td style="vertical-align: center">
                    <a href="@Url.Action("DetailsFormPhuKien", "ListProduct", new {@productid = item.iMaProduct})">
                        <i class="fas fa-info-circle"></i>
                    </a>
                </td>
                <td style="vertical-align: center"><div class="btn btn-danger">@Html.ActionLink("Xóa", "XoaGioHang", new { @iMasp = item.iMaProduct },new {style= "text-decoration: none; color: white"})</div></td>
                <td style="vertical-align: center"><input type="submit" value=" Cập nhật " class="btn btn-success"/></td>
            }
        </tr>
    }

</table>
<div class="row">
    <div class="col-md-6">
        <h3 style="text-align: right; color: red;font-weight: bold">Số lượng sản phẩm: @ViewBag.Tongsoluong</h3>
    </div>
    <div class="col-md-6">
        <h3 style="text-align: right; color: red;font-weight: bold">Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VND</h3>
    </div>
</div>
<br />
<div style="text-align: right">
    <h3>@Html.ActionLink("Xóa Giỏ Hàng", "XoaTatcaGioHang", new { Style = "color:White;" })</h3>
</div>
<br />

<div class="row">
    <div class="col-md-6">
        @*@Html.ActionLink("Tiếp tục mua hàng", "HomeMenu", "Home")*@
        @*<a href="~/Home/HomeMenu" style="text-decoration: none;font-weight: bold" class="btn btn-dark">< Tiếp tục mua hàng</a>*@
        <button class="btn btn-outline-dark" type="submit" ><a href="~/Home/HomeMenu" style="text-decoration: none;font-weight: bold;color:grey">< Tiếp tục mua hàng</a></button>
    </div>
    <div class="col-md-6">
        @*@Html.ActionLink("ĐẶT HÀNG", "dathang", "Giohang")*@
        @*<a href="~/GioHang/Dathang" style="float: right;text-decoration: none;font-weight: bold" class="btn btn-dark">Đặt hàng ></a>*@
        <button class="btn btn-outline-dark" type="submit" style="float: right"><a href="~/GioHang/Dathang" style="text-decoration: none; font-weight: bold;color:grey">Đặt hàng ></a></button>
    </div>
</div>


<script src="~/Scripts/jquery-3.6.0.min.js"></script>

<script src="~/Scripts/bootstrap.min.js"></script>